<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/city_background"

    >

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backButton"
        android:src="@drawable/left"
        android:background="@null"
        android:contentDescription="@string/back_button_description"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:id="@+id/queryET"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/cityTextView"

        android:layout_centerHorizontal="true"
        android:autofillHints=""
        android:background="@color/white"
        android:fontFamily="casual"
        android:gravity="center_vertical|center_horizontal"
        android:hint="@string/default_query"
        android:imeOptions="actionGo"
        android:inputType="textAutoCorrect"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/getWeatherTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backButton"
        android:layout_centerHorizontal="true"
        android:fontFamily="casual"
        android:text="@string/get_weather"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cityTextView"
        android:layout_width="364dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="201dp"
        android:fontFamily="casual"
        android:text="@string/by_city"
        android:textColor="#fff"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="388dp"
        android:layout_height="67dp"
        android:layout_alignEnd="@+id/cityTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="334dp"
        android:layout_marginEnd="-40dp"
        android:fontFamily="casual"
        android:text="By Coordinates"
        android:textColor="#FFF"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:layout_alignRight="@+id/cityTextView"
        android:layout_marginRight="-40dp" />

    <LinearLayout
        android:layout_width="364dp"
        android:layout_height="122dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <EditText
            android:id="@+id/queryET8"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/cityTextView"

            android:layout_centerHorizontal="true"
            android:autofillHints=""
            android:background="@color/white"
            android:fontFamily="casual"
            android:gravity="center_vertical|center_horizontal"
            android:hint="@string/default_longitude"
            android:imeOptions="actionGo"
            android:inputType="textAutoCorrect"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/queryET7"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/cityTextView"

            android:layout_centerHorizontal="true"
            android:autofillHints=""
            android:background="@color/white"
            android:fontFamily="casual"
            android:gravity="center_vertical|center_horizontal"
            android:hint="@string/default_latitude"
            android:imeOptions="actionGo"
            android:inputType="textAutoCorrect"
            android:textColor="@color/black"
            android:textSize="30sp" />
    </LinearLayout>

</RelativeLayout>